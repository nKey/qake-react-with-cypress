{
  "name": "qake-react-with-cypress",
  "version": "0.1.0",
  "description": "Component, e2e and unit tests using Cypress 10 and React 18",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "clear-npx-cache": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "cypress open",
    "test:headless": "cypress run --component --config video=false",
    "code:coverage": "start chrome --new-window --incognito path\\qake-react-with-cypress\\coverage\\lcov-report\\index.html",
    "code:coverage:mac": "open coverage/Icov-report/index.html",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@bahmutov/cypress-code-coverage": "^1.3.1",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^10.3.0",
    "eslint": "^8.25.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-react": "^7.31.10",
    "prettier": "^2.7.1"
  },
  "nyc": {
    "all": true,
    "excludeAfterRemap": true,
    "include": "src/*.js",
    "exclude": [
      "src/App.cy.js",
      "src/index.js",
      "src/index.css",
      "src/setupTests.js"
    ]
  }
}
